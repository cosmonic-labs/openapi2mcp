{
  "name": "openapi2mcp",
  "version": "0.7.0",
  "description": "Generate MCP servers from OpenAPI specs. Works with https://github.com/cosmonic-labs/mcp-server-template-ts",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:wasm": "cargo build --target wasm32-wasip2 --release",
    "build:jco": "jco transpile ./target/wasm32-wasip2/release/openapi2mcp.wasm -o dist",
    "build": "npm run build:wasm && npm run build:jco"
  },
  "bin": {
    "openapi2mcp": "index.js"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmonic-labs/openapi2mcp.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cosmonic-labs/openapi2mcp/issues"
  },
  "homepage": "https://github.com/cosmonic-labs/openapi2mcp#readme",
  "dependencies": {
    "@bytecodealliance/preview2-shim": "^0.17.6"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.15.4"
  }
}
